    }

    if {${python.version} <= 39} {
        livecheck.type  none
    } else {
        test.run        yes
        test.env-append PYTHONPATH=${destroot}${python.pkgd}
        test.dir        ${destroot}${python.pkgd}/numexpr/tests
        python.test_framework
        test.cmd        ${python.bin} test_numexpr.py
