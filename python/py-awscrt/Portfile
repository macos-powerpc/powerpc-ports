PortSystem          1.0
PortGroup           python 1.0

name                py-awscrt
# This is only used by awscli2. Bump when Amazon bumps
# their pinned version in awscli2's setup.cfg.
version             0.31.2
revision            0

categories-append   devel
maintainers         {gmail.com:davidgilman1 @dgilman} openmaintainer
license             Apache-2

description         Common runtime for AWS Python projects
long_description    {*}${description}

homepage            https://aws.amazon.com/cli

checksums           rmd160  75e09241e873c5856084802caeefec986774e985 \
                    sha256  552555de1beff02d72a1f6d384cd49c5a7c283418310eae29d21bcb749c65792 \
                    size    38169245

python.versions     310 311 312 313 314

compiler.c_standard     2011
compiler.cxx_standard   2011

if {${subport} ne ${name}} {
    PortGroup           legacysupport 1.1

    # O_CLOEXEC, strnlen
    legacysupport.newest_darwin_requires_legacy 10

    post-extract {
        delete -force ${worksrcpath}/crt
    }

    patchfiles-append   patch-setup.py.diff

    depends_build-append \
                        path:bin/cmake:cmake

    depends_lib-append  port:aws-c-auth \
                        port:aws-c-cal \
                        port:aws-c-common \
                        port:aws-c-compression \
                        port:aws-c-event-stream \
                        port:aws-c-http \
                        port:aws-c-io \
                        port:aws-c-mqtt \
                        port:aws-c-s3 \
                        port:aws-c-sdkutils \
                        port:aws-checksums \
                        port:py${python.version}-setuptools \
                        port:s2n-tls

    build.env-append    AWS_CRT_BUILD_FORCE_STATIC_LIBS=0 \
                        AWS_CRT_BUILD_USE_SYSTEM_LIBCRYPTO=1 \
                        AWS_CRT_BUILD_USE_SYSTEM_LIBS=1 \
                        AWS_CRT_BUILD_WARNINGS_ARE_ERRORS=0

    livecheck.type      none
}
