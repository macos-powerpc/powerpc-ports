@@ -69,7 +68,9 @@ WXDLLIMPEXP_BASE CFURLRef wxOSXCreateURLFromFileSystemPath( const wxString& path
 
 #if wxUSE_GUI
 
-#if !wxOSX_USE_IPHONE
