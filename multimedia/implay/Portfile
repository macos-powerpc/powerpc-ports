PortSystem              1.0
PortGroup               cmake 1.1
PortGroup               conflicts_build 1.0
PortGroup               github 1.0
PortGroup               legacysupport 1.1

# ImPlay(23965,0xa0260620) malloc: *** mmap(size=1819693056) failed (error code=12)
legacysupport.newest_darwin_requires_legacy 0
legacysupport.redirect_bins ImPlay

name                    implay
github.setup            tsl0922 ImPlay 1.5.1
revision                0
categories              multimedia
maintainers             {@barracuda156 macos-powerpc.org:barracuda} openmaintainer
license                 GPL-2
description             Cross-Platform Desktop Media Player
long_description        {*}${description} using libmpv.
homepage                https://tsl0922.github.io/ImPlay

set imgui_v             1.90.9

master_sites-append     https://github.com/ocornut/imgui/archive/v${imgui_v}/:imgui
distfiles-append        imgui-${imgui_v}${extract.suffix}:imgui

checksums               ${distname}${extract.suffix} \
                        rmd160  5b79b91a4ad9e21783c283b3378c8c68678cf05a \
