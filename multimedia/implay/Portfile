github.tarball_from     archive

# https://github.com/tsl0922/ImPlay/issues/92
post-extract {
    delete -f ${worksrcpath}/third_party/glad/include
    delete -f ${worksrcpath}/third_party/glad/src
    copy ${filespath}/glad/include ${worksrcpath}/third_party/glad/
    copy ${filespath}/glad/src ${worksrcpath}/third_party/glad/
    copy ${workpath}/imgui-${imgui_v}/backends/imgui_impl_opengl2.cpp ${worksrcpath}/third_party/imgui/source/
    copy ${workpath}/imgui-${imgui_v}/backends/imgui_impl_opengl2.h ${worksrcpath}/third_party/imgui/include/
    
}

# It does not detect versions correctly.
patchfiles              patch-CMakeLists.txt

# https://github.com/tsl0922/ImPlay/issues/91
# Also avoid conflict with system headers for `check`.
patchfiles-append       0001-utils.cpp.patch

patchfiles-append       0002-fix-for-glfw-3.1.patch

# Wipe out evil clangisms
if {[string match *gcc* ${configure.compiler}]} {
    patchfiles-append   0003-cocoa.patch
}

# No GL3
patchfiles-append       patch-gl2.diff \
                        patch-imgui.diff

depends_build-append    path:bin/pkg-config:pkgconfig

depends_lib-append      path:lib/pkgconfig/freetype2.pc:freetype \
                        port:glfw \
                        path:lib/libmpv.dylib:mpv

# Picks wrong GL headers otherwise
conflicts_build         mesa

compiler.cxx_standard   2020

configure.args-append   -DMPV_INCLUDE_DIRS=${prefix}/include \
                        -DMPV_LIBRARY_DIRS=${prefix}/lib \
                        -DMPV_LIBRARIES=libmpv.dylib

configure.args-append   -DUSE_OPENGL_ES3=OFF \
                        -DUSE_PATCHED_GLFW=OFF

configure.cppflags-append \
                        -DGLFW_COMPAT \
                        -DGLFW_EXPOSE_NATIVE_NSGL

# To fix compiling nativefiledialog
configure.cflags-append -std=c11
