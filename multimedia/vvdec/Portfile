configure.args-append \
                    -DBUILD_SHARED_LIBS=ON \
                    -DVVDEC_ENABLE_LINK_TIME_OPT=ON \
                    -DVVDEC_ENABLE_UNSTABLE_API=OFF \
                    -DVVDEC_ENABLE_WARNINGS_AS_WERROR=OFF \
                    -DVVDEC_ENABLE_X86_SIMD=OFF \
                    -DVVDEC_INSTALL_VVDECAPP=ON

