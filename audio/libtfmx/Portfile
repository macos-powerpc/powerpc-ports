# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           makefile 1.0

set modname         tfmx
name                lib${modname}
github.setup        TTK-qmmp qmmp-${modname} e69b57c1373ee77f370c4bb42e07904f67ca47a7
version             20251023
revision            0
categories          audio
license             GPL-3
maintainers         nomaintainer
description         Input plugin for qmmp to play ${modname} modules
long_description    {*}${description}
checksums           rmd160  a743c74cc1f84f6e65ff2121c8de78e64c8ecf81 \
                    sha256  391a238bb21d26f8fef7ee74009425f6e2fe6dae8a0662575937ea69bc54840d \
                    size    34482
github.tarball_from archive

post-extract {
    copy ${filespath}/Makefile ${worksrcpath}/
}

compiler.c_standard     2011
compiler.cxx_standard   2011

destroot {
    xinstall -m 0644 ${worksrcpath}/${name}.dylib ${destroot}${prefix}/lib/
    set incdir ${prefix}/include/${name}
    xinstall -d ${destroot}${incdir}
    fs-traverse h ${worksrcpath}/${name} {
        if {[file isfile ${h}] && [file extension ${h}] eq ".h"} {
            copy ${h} ${destroot}${incdir}/
        }
    }
}
