PortSystem          1.0
PortGroup           github 1.0
PortGroup           makefile 1.0

set modname         psf
name                lib${modname}
github.setup        TTK-qmmp qmmp-${modname} 4daf99ac255dd25a08463b36885d8110245d7fd4
version             20251016
revision            0
categories          audio
license             GPL-3
maintainers         nomaintainer
description         Input plugin for qmmp to play ${modname} modules
long_description    {*}${description}
checksums           rmd160  27de5aaf5fa4794989b2311f0f6bf30499bbc368 \
                    sha256  a809b70d40f3868b750c54c3bcf9b55e1bc5c683ebbcbbba13bd002e27f6fe1e \
                    size    490058
github.tarball_from archive

post-extract {
    copy ${filespath}/Makefile ${worksrcpath}/
}

depends_lib-append  port:zlib

destroot {
    copy ${worksrcpath}/${name}.dylib ${destroot}${prefix}/lib/
    xinstall -d ${destroot}${prefix}/include/${name}
    copy ${worksrcpath}/${name}/ao.h ${destroot}${prefix}/include/${name}/
}
