use_xz              yes
checksums           rmd160  4286ff586d0ddc3e515a624fb98c6c7bcd09ac6e \
                    sha256  e93a7836c7307dcbc989e95fc7ec0878322514c475fabd90e89ed52fd4f15d32 \
                    size    198492

