                    --with-blowfish-headers=[openssl::include_dir] \
                    --with-lzo-headers=${prefix}/include \
                    --with-lzo-lib=${prefix}/lib \
                    --with-ssl-headers=[openssl::include_dir] \
                    --with-ssl-lib=[openssl::lib_dir]

