                    sha256  abf8df6b15e3febeaaeae2ce24ead7105eb1537ad4ec0d830c83cbb684fd98b9 \
                    size    132691

patchfiles          clear_nat_hack_flags.patch \
                    patch-lfd_legacy_encrypt.c.diff

