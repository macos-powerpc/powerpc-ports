Subject: [PATCH] Improve help

---
 fzf.ml | 13 ++++++++++++-
 1 file changed, 12 insertions(+), 1 deletion(-)

diff --git fzf.ml fzf.ml
index 090aca8..bf89774 100644
--- fzf.ml
+++ fzf.ml
@@ -318,7 +318,18 @@ let () =
     ~argv:(Array.to_list transformed_argv)
   @@
   let open Command.Let_syntax in
-  Command.async ~summary:"fzf" [%map_open
+  Command.async
+    ~summary:"fzf - fuzzy finder"
+    ~readme:(fun () ->
+      "KEYBINDINGS:\n\
+      \  Arrow Up/Down, j/k  Navigate items\n\
+      \  Enter               Select current item\n\
+      \  Ctrl+C, Esc         Exit without selection\n\
+      \  Ctrl+\\              Toggle preview on/off\n\
+      \  Backspace           Delete character\n\
+      \n\
+      For more information, visit: https://github.com/junegunn/fzf")
+    [%map_open
     let prompt = flag "--prompt" (optional_with_default "> " string)
         ~doc:"STRING Prompt string (default: '> ')"
     and header = flag "--header" (optional string)
