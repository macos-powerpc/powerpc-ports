github.setup        KarypisLab GKlib 6e7951358fd896e2abed7887196b6871aac9f2f8
name                gklib
version             20250706
revision            0
categories          math
maintainers         nomaintainer
license             Apache-2

description         KarypisLab library of various helper routines and frameworks
long_description    {*}${description} used by the lab's software.

checksums           rmd160  b1c5346c1c881d346fd6bee4be2c29233a9f9378 \
                    sha256  42c52e58408ad06dc23c2a052eea529b269287ea8a6f3f6cdc47f18d50b2a177 \
                    size    187026
github.tarball_from archive

compiler.thread_local_storage   yes

configure.args-append \
                    -DBUILD_SHARED_LIBS=ON

if {${configure.build_arch} ni [list i386 x86_64]} {
    configure.args-append \
                    -DNO_X86=ON
}

variant openmp description "Enable OpenMP support" {
    compiler.openmp_version 4.0
    configure.args-append \
                    -DOPENMP=ON
}
