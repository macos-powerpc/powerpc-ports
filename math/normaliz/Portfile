# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem              1.0
PortGroup               github 1.0

name                    normaliz
github.setup            Normaliz Normaliz 3.10.5 v
revision                0
categories              math science
license                 GPL-3
maintainers             nomaintainer
description             Tool for computations in affine monoids, vector configurations, \
                        lattice polytopes and rational cones.
long_description        {*}${description}

homepage                https://www.normaliz.uni-osnabrueck.de
distname                ${name}-${version}

checksums               rmd160  9f9c5a088cef036833b19db83681168db0ae68ae \
                        sha256  58492cfbfebb2ee5702969a03c3c73a2cebcbca2262823416ca36e7b77356a44 \
                        size    6997871
github.tarball_from     releases

use_autoreconf          yes
autoreconf.args         -fvi

depends_lib-append      port:flint \
                        port:gmp

compiler.openmp_version 4.5

post-patch {
    # ld: internal error: atom not found in symbolIndex(...) for architecture ...
    reinplace -W ${worksrcpath} {s|-Wl,-s||} \
                        source/Makefile.am \
                        source/Makefile.configuration
}

configure.args-append   --enable-openmp \
                        --with-flint=${prefix} \
                        --with-gmp=${prefix}

# normaliz is used with polymake which builds against bliss
configure.args-append   --without-nauty

# MacPorts hasn't got it, prevent picks it
configure.args-append   --without-e-antic \
                        --without-hash-library
