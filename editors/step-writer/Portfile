version             2025.02.25
revision            1
categories          editors
license             MIT
maintainers         nomaintainer
description         Lightweight & simple TUI text editor
long_description    {*}${description} written in C++.
checksums           rmd160  22c85b7d855083c79b8ccd65c64edd1538f7ad1f \
                    sha256  8467d5d157e7cbb2dbcfbd11aeaa1893cad639b2686f250c5b00533a2cd0b2c6 \
                    size    21276408
github.tarball_from archive

depends_build-append \
                    path:bin/pkg-config:pkgconfig
depends_lib-append  port:FTXUI \
                    port:tree-sitter \
                    port:tree-sitter-cpp

# Due to: https://trac.macports.org/ticket/71325
patchfiles-append   patch-CMakeLists.diff

# Fix for FTXUI API 6.x:
patchfiles-append   patch-FTXUI.diff

# Editor.cpp:109:14: error: 'cerr' is not a member of 'std'
patchfiles-append   patch-iostream.diff

compiler.cxx_standard   2020

configure.args-append \
                    -DBUILD_TESTS=OFF \
                    -DUSE_BUNDLED_LIBS=OFF

destroot {
    system "install_name_tool -change libtree-sitter-cpp.dylib \
        ${prefix}/lib/libtree-sitter-cpp.dylib ${cmake.build_dir}/${name}"
    copy ${cmake.build_dir}/${name} ${destroot}${prefix}/bin/
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} LICENSE README.md ${destroot}${docdir}
}
