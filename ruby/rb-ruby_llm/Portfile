supported_archs     noarch

if {${subport} ne ${name}} {
    depends_run-append \
                    port:rb${ruby.suffix}-base64 \
                    port:rb${ruby.suffix}-event_stream_parser \
                    port:rb${ruby.suffix}-faraday \
                    port:rb${ruby.suffix}-faraday-multipart \
                    port:rb${ruby.suffix}-faraday-net_http \
                    port:rb${ruby.suffix}-faraday-retry \
                    port:rb${ruby.suffix}-marcel \
                    port:rb${ruby.suffix}-zeitwerk

    post-destroot {
        # rb-marcel
        reinplace "s|~> 1.0|>= 1.0|g" ${destroot}${ruby.gemdir}/specifications/${ruby.module}-${version}.gemspec
        # rb-zeitwerk
        reinplace "s|~> 2|>= 2|g" ${destroot}${ruby.gemdir}/specifications/${ruby.module}-${version}.gemspec
    }
}
