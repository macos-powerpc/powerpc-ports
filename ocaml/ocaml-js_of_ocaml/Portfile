ocaml.build_type    dune

if {${subport} eq ${name}} {
    depends_lib-append \
                    port:ocaml-js_of_ocaml-compiler
}

subport ${name}-compiler {
    depends_lib-append \
                    port:ocaml-cmdliner \
                    port:ocaml-findlib \
                    port:ocaml-menhir \
                    port:ocaml-menhirLib \
                    port:ocaml-menhirSdk \
                    port:ocaml-sedlex \
                    port:ocaml-yojson
}

subport ${name}-lwt {
    # No -append is intended here:
    depends_lib     port:ocaml-js_of_ocaml \
                    port:ocaml-js_of_ocaml-ppx \
                    port:ocaml-lwt
}

subport ${name}-ppx {
    depends_lib-append \
                    port:ocaml-js_of_ocaml
}
