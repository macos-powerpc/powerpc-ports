PortSystem          1.0
PortGroup github    1.0
PortGroup ocaml     1.1

github.setup        ocamllabs ocaml-ctypes 0.23.0
revision            1
categories          ocaml devel
maintainers         {landonf @landonf} openmaintainer
license             MIT
description         Bind to C libraries using pure OCaml
long_description    ctypes is a combinator library for binding to C \
                    libraries using pure OCaml.

github.tarball_from archive
distname            ${version}
worksrcdir          ${name}-${version}

checksums           rmd160  86d164df88a93e4d3c7a083bdf2afed3eb95d63d \
                    sha256  cae47d815b27dd4c824a007f1145856044542fe2588d23a443ef4eefec360bf1 \
                    size    200133

depends_build-append \
                    port:ocaml-dune-configurator
depends_lib-append  port:ocaml-bigarray-compat \
                    port:ocaml-integers

depends_test-append port:ocaml-ounit2 \
                    path:bin/pkg-config:pkgconfig

ocaml.build_type    dune

subport ${name}-foreign {
    revision        0

    description     Dynamic access to foreign C libraries using Ctypes

    depends_build-append \
                    path:bin/pkg-config:pkgconfig

    depends_lib     port:libffi \
                    port:ocaml-dune-configurator \
                    port:ocaml-ctypes \
                    port:ocaml-integers
}

test.run            yes
