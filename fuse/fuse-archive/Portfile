    xinstall -m 755 ${worksrcpath}/out/fuse-archive ${destroot}${prefix}/bin
    xinstall -d ${destroot}${prefix}/share/man/man1
    xinstall -m 644 ${worksrcpath}/fuse-archive.1 ${destroot}${prefix}/share/man/man1
}
