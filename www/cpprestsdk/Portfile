                    -DHAVE_XLOCALE_H

variant tests description "Build tests" {
    configure.args-replace \
                    -DBUILD_TESTS=OFF -DBUILD_TESTS=ON
    configure.pre_args-replace \
                    -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=ON \
                    -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=OFF
    test.run        yes
}
