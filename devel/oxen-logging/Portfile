PortSystem              1.0
PortGroup               cmake 1.1
PortGroup               github 1.0

github.setup            oxen-io oxen-logging 1.2.0 v
revision                1
categories              devel
maintainers             {@barracuda156 macos-powerpc.org:barracuda} openmaintainer
license                 BSD
description             Oxen C++ logging library
long_description        {*}${description}
checksums               rmd160  c460ad9da31f33ecf203b059d08667ddf4272324 \
                        sha256  d79f7907b325895779849ed93595670115eef00f354f70c31273843ca95b10c2 \
                        size    27194
github.tarball_from     archive

# Match spdlog
set port_libfmt         libfmt11
cmake.module_path-append \
                        ${prefix}/lib/${port_libfmt}/cmake

depends_lib-append      port:${port_libfmt} \
                        port:spdlog

compiler.cxx_standard   2020

configure.args-append   -DOXEN_LOGGING_FMT_HEADER_ONLY=OFF \
                        -DOXEN_LOGGING_SPDLOG_HEADER_ONLY=OFF

post-destroot {
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} LICENSE README.md ${destroot}${docdir}
}
