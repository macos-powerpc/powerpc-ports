# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           meson 1.0

name                nautilus
version             3.38.2
revision            0
set branch          [join [lrange [split ${version} .] 0 1] .]
description         The GNOME filemanager
long_description    Nautilus is the official file manager for the GNOME \
                    desktop. It is designed to be primarly a file manager, \
                    but there are support for web and file viewing too.
maintainers         {devans @dbevans} openmaintainer
categories          gnome
license             GPL-2+
homepage            https://wiki.gnome.org/Apps/Nautilus
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  d37c80d4c1553cf57f5e0e5deed4e971154db7c8 \
                    sha256  d09ceb54c274e50084c8757a73cd247fee5bde02a0b0d13733b0006d1a4196a6 \
                    size    3221128

# data/meson.build:32:15: ERROR: Function does not take positional arguments.
patchfiles-append   patch-fix-configure.diff

# Use the right python and prefix:
patchfiles-append   patch-postinstall.py.diff

set py_ver          3.13
set py_ver_nodot    [string map {. {}} ${py_ver}]
configure.python    ${prefix}/bin/python${py_ver}

post-patch {
    reinplace "s|@PREFIX@|${prefix}|" ${worksrcpath}/build-aux/meson/postinstall.py
    reinplace "s|@PYTHON@|${configure.python}|" ${worksrcpath}/build-aux/meson/postinstall.py
}

depends_build-append \
                    path:bin/pkg-config:pkgconfig \
                    port:python${py_ver_nodot}

depends_lib-append  port:desktop-file-utils \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:gexiv2 \
                    port:gnome-autoar \
                    port:gnome-desktop \
                    port:gsettings-desktop-schemas \
                    port:gstreamer1-gst-plugins-base \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:libxml2 \
                    port:shared-mime-info \
                    port:tracker3 \
                    port:xorg-libX11

depends_run         port:adwaita-icon-theme

require_active_variants gtk3 x11

# blacklist compilers that do not support C11 (redefinition of typedef ‘NautilusLocationEntryClass’ at nautilus-location-entry.h:39)
compiler.blacklist  *gcc-3.* *gcc-4.* {clang < 300}

configure.args-append \
                    -Ddocs=false \
                    -Dextensions=true \
                    -Dintrospection=true \
                    -Dpackagekit=false \
                    -Dselinux=false \
                    -Dtests="none"

post-activate {
    system "${prefix}/bin/update-desktop-database ${prefix}/share/applications"
    system "${prefix}/bin/update-mime-database ${prefix}/share/mime"
    system "${prefix}/bin/glib-compile-schemas ${prefix}/share/glib-2.0/schemas"
}

livecheck.type      gnome
